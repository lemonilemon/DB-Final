# =============================================================================
# NEW Fridge Backend - Environment Variables Template
# =============================================================================
# Copy this file to .env and update with your actual values
# Command: cp .env.example .env
#
# IMPORTANT: Never commit .env to git! It should be in .gitignore
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
DEBUG=True
APP_NAME=NEW Fridge API
APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# CRITICAL: Generate a secure secret key for production!
# Generate with: openssl rand -hex 32
# Or: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# BCrypt cost factor (10-15, higher = more secure but slower)
BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# PostgreSQL Database (Primary - Transactional Data)
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=postgres
POSTGRES_HOST=postgres  # Use 'postgres' in Docker, 'localhost' for local dev
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# MongoDB (Analytics & Logging)
# -----------------------------------------------------------------------------
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=password
MONGO_HOST=mongodb  # Use 'mongodb' in Docker, 'localhost' for local dev
MONGO_PORT=27017
MONGO_DB_NAME=newfridge

# -----------------------------------------------------------------------------
# pgAdmin (PostgreSQL Management UI)
# -----------------------------------------------------------------------------
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=password

# -----------------------------------------------------------------------------
# Mongo Express (MongoDB Management UI)
# -----------------------------------------------------------------------------
ME_CONFIG_MONGODB_ADMINUSERNAME=root
ME_CONFIG_MONGODB_ADMINPASSWORD=password
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=password

# -----------------------------------------------------------------------------
# API Server Settings
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True  # Set to False in production

# -----------------------------------------------------------------------------
# CORS Settings (Cross-Origin Resource Sharing)
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
